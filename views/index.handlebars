<h1 id= "slogan">Eat A Thing!</h1> 

<h2>Add a thing to eat!</h2>

<form class="burgerForm">

  <div class="form-group">
    <label for="burger_name"></label>
    <input type="text" id="burger_name" name="burger_name" placeholder="Sustenance" style= "width: 500px">
  </div>

  <div class="form-group">
    <label for="devoured"><p>Did you eat that bro?</p></label>
    <input type="radio" name="devoured" id="radiobtn" value="1">Ate!&nbsp;
    <input type="radio" name="devoured" id="radiobtn" value="0" checked>Starved!
  </div>

  <button type="submit" id="submit">Add Thing</button>
</form>

<div class="burger-container">
  <div id="container1">
    <h2>Not Consumed Thing!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
           {{> burgers/burger-block devoured = true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="container2">
    <h2>Consumed Thing!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured = false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>